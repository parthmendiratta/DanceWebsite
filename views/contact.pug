extends base.pug

block scripts 
    script(src="/static/index.js")

block style
    style 
        include ../static/style.css
        include ../static/contact.css

block content 
    h1 This is contact form
    form(action="/contact", method="post",class="signup") 
        label(for="name" id="namelabel") Name: 
        input(type="text", name="name",id="name",placeholder="Enter your name" required)
        label(for="email" id="emaillabel") Email: 
        input(type="email", name="email",id="email",placeholder="Enter your email" required)
        label(for="phone_no" id="phone_nolabel") Phone No: 
        input(type="text", name="phone_no",id="phone_no",placeholder="Enter your phone no." required)
        label(for="age" id="agelabel") Age: 
        input(type="number", name="age",id="age",placeholder="Enter your age" required)
        label(for="information" id="informationlabel") Additional Infromation: 
        textarea(name="information", cols="30", rows="10",placeholder="More about you" id="information") 
        input(type="submit", value="Sign Up",id="sign_up")
